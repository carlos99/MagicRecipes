<header>
   <div class="container">
     <nav class="navbar navbar-default">
       <div class="container-fluid">
         <div class="navbar-header">
           <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <%= link_to image_tag('logo.png'), root_path, class: "navbar-brand"%>
         </div>
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
           <ul class="nav navbar-nav floting-menu"> 
               <% if logged_in?%>
               <li><%= link_to 'Create a New Recipe', new_recipe_path%></li>
                 <li class="dropdown">
                  <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle btn-show-user", "data-toggle" => "dropdown" do %>
                  <%= current_user.chef_name %> <b class="caret"></b>
                  <% end %>
                   <ul class="dropdown-menu">
                       <li><%= link_to "View Profile", chef_path(current_user) %></li>
                       <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Logout", logout_path %></li>
                   </ul>
                 </li>
                   
               <% else %>
                   <li><%= link_to 'View Recipes', recipes_path%></li>
                   <li class="li-sessions"><%= link_to 'Login', login_path, class: 'sessions-btns' %></li>
                   <li class="li-sessions"><%= link_to 'Register', register_path, class: 'sessions-btns' %></li>
                  
               <% end %>
           </ul>
         </div>
       </div>
     </nav>
   </div>
</header>