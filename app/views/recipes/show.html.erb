<div class="container">
	<div class="row">
		<div class="col-md-8">
			<% if logged_in? and @recipe.chef == current_user %>
				<p>
					<%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-success" %>
				</p>
			<% end %>
			<div class="col-md-4">
				
			</div>
			<h2><%=@recipe.name%></h2>
			<p><%=@recipe.summary%></p>
			<div>
				<%= image_tag (@recipe.picture.url) if @recipe.picture? %>
			</div>
			<p><%=simple_format(@recipe.description)%></p>
			<div class="pull-right">
				<%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
					<i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @recipe.thumbs_up_total%>
				<% end %>&nbsp&nbsp&nbsp&nbsp&nbsp

				<%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
					<i class="glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @recipe.thumbs_down_total%>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<p><%= link_to 'Return to Recipes List', recipes_path, class: 'btn btn-warning btn-lg' %></p>
	</div>
</div>