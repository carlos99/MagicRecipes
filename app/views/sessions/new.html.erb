<div class="row content-form-recipes">
	<div class="container form-container-sessions">
		<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 frm-bg">
			<h1 class="center-title">Edit Recipe</h1>
			<%= form_tag '/login' do %>
				<div class="form-group">
					<%= label_tag :email%>
					<%= text_field_tag :email, nil, class: 'form-control'%>
				</div>

				<div class="form-group">
					<%= label_tag :password%>
					<%= password_field_tag :password, nil, class: 'form-control'%>
				</div>

				<div class="form-group">
					<%= submit_tag 'Login', class: 'btn btn-success custom-btn'%>
				</div>
			<% end %>
		</div>
	</div>
</div>
